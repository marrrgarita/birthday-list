<div class="content-container">
  <h1><i>Please</i> buy me:</h1>

  <div class="items-container">

    <% @items.each do |item| %>
      <div class="item">
        <p class="item-title"><%= item.title %></p>
        <%= link_to image_tag(item.image), item.url, target: :_blank, class: "main-image" %>
        <p>Price: $<%= item.price %></p>
        <p><a href=" <%= item.url%> ">Link</a> | <%= link_to "Edit", edit_item_path(item) %> | <%= link_to "Delete", item, method: :delete, data: {confirm:"Are you sure you want to delete this item?"} %></p>
        <p><%= item.description %></p>
      </div>
    <% end %>
  </div>
  <%= link_to "I would also like...", new_item_path %>
</div>
